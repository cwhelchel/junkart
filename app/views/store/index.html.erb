<h1>Welcome to the Junkman's Store</h1>

<div class="list_actions">
  Sort by:
  <%= link_to( 'Name',
              { :controller => "store",
                :action => "sort",
                :id => 'name' },
              { :remote => true,
                :method => :post} )%>
                
  <%= link_to( 'Price',
              { :controller => "store",
                :action => "sort",
                :id => 'price' },
              { :remote => true,
                :method => :post} )%>
  


  Filter by:
  <%= collection_select :category,
                        :id,
                        Category.all,
                        'id',
                        'name',
                        { :selected =>  session[:cat_filter].to_i },
                        :onchange => "document.location = 'http://localhost:3000/store/cat_filter/' + this.value"
                        %>
                     
</div>

<%= render 'store' %>



